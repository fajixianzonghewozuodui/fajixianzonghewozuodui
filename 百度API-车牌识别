from aip import AipOcr

import cv2
from matplotlib import pyplot as plt

# plt显示彩色图片
def plt_show0(img):
    b, g, r = cv2.split(img)
    img = cv2.merge([r, g, b])
    plt.imshow(img)
    plt.show()

""" 你的 APPID AK SK """
APP_ID = '21249979'
